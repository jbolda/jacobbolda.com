{
  "name": "jacobbolda.com",
  "repository": "https://github.com/jbolda/jacobbolda.com.git",
  "version": "3.0.0",
  "description": "personal site and blog",
  "type": "module",
  "scripts": {
    "postinstall": "node ./.bin/box.js",
    "build": "npm run build:css && npm run build:site",
    "build:css": "tailwindcss --config legacy-commonjs/tailwind.config.js --input index.css --output public/styles.css --minify",
    "build:css:watch": "tailwindcss --config legacy-commonjs/tailwind.config.js --input index.css --output public/styles.css --watch",
    "build:site": "toast incremental .",
    "dev": "node ./scripts/watch.js",
    "nuke": "rm -drf public/* && npm run postinstall && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pretty": "prettier --write \"{src,fetch,legacy-commonjs}/**/*.{js, json}\""
  },
  "keywords": [
    "personal",
    "blog"
  ],
  "author": "jbolda",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/jbolda/jacobbolda.com/issues"
  },
  "homepage": "https://www.jacobbolda.com",
  "engines": {
    "node": ">=16.17.*"
  },
  "dependencies": {
    "@mdx-js/preact": "^2.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@toastdotdev/mdx": "^0.3.4",
    "airtable": "0.11.6",
    "big.js": "6.2.1",
    "esinstall": "^1.1.7",
    "gray-matter": "^4.0.3",
    "node-fetch": "3.3.0",
    "prism-react-renderer": "^1.3.5",
    "prismjs": "1.29.0",
    "remark-mdx": "^2.3.0",
    "remark-parse": "^10.0.1",
    "remark-stringify": "^10.0.2",
    "remark-wiki-link": "^1.0.4",
    "tailwindcss": "^3.1.8",
    "toast": "0.5.4",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@effection/process": "^2.1.2",
    "chokidar": "^3.5.3",
    "effection": "^2.0.6",
    "patch-package": "^6.5.0",
    "prettier": "2.7.1"
  },
  "volta": {
    "node": "18.12.1",
    "npm": "9.1.2"
  }
}
