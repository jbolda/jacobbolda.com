{
  "name": "jacobbolda.com",
  "repository": "https://github.com/jbolda/jacobbolda.com.git",
  "version": "3.0.0",
  "description": "personal site and blog",
  "type": "module",
  "scripts": {
    "postinstall": "node ./.bin/box.js",
    "build": "npm run build:css && npm run build:site",
    "build:css": "postcss --config legacy-commonjs index.css -o public/styles.css",
    "build:site": "toast incremental .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pretty": "prettier --write \"{src,fetch,legacy-commonjs}/**/*.{js, json}\""
  },
  "keywords": [
    "personal",
    "blog"
  ],
  "author": "jbolda",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/jbolda/jacobbolda.com/issues"
  },
  "homepage": "https://www.jacobbolda.com",
  "engines": {
    "node": ">=14.13.*"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^1.0.0",
    "@toastdotdev/mdx": "^0.1.3",
    "big.js": "5.2.2",
    "chalk": "^4.1.0",
    "d3": "4.13.0",
    "globby": "^11.0.1",
    "gray-matter": "^4.0.2",
    "parse-numeric-range": "^1.2.0",
    "postcss": "^8.1.6",
    "postcss-cli": "^8.2.0",
    "prism-react-renderer": "^1.1.1",
    "prismjs": "^1.20.0",
    "react-helmet": "^6.1.0",
    "tailwindcss": "^1.9.6",
    "toast": "^0.3.30"
  },
  "devDependencies": {
    "esinstall": "^0.5.2",
    "prettier": "2.1.2"
  },
  "snowpack": {
    "exclude": [
      "public/**/*",
      "toast.js"
    ],
    "installOptions": {
      "alias": {
        "react": "preact/compat"
      }
    },
    "knownEntrypoints": [
      "preact/hooks",
      "preact"
    ]
  },
  "volta": {
    "node": "14.15.3",
    "npm": "7.3.0"
  }
}
