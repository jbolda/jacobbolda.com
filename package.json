{
  "name": "jacobbolda.com",
  "repository": "https://github.com/jbolda/jacobbolda.com.git",
  "version": "3.0.0",
  "description": "personal site and blog",
  "type": "module",
  "scripts": {
    "postinstall": "patch-package && node ./.bin/box.js",
    "build": "npm run build:css && npm run build:site",
    "build:css": "NODE_ENV=production postcss --config legacy-commonjs index.css -o public/styles.css",
    "build:css:watch": "postcss --config legacy-commonjs index.css -o public/styles.css -w",
    "build:site": "toast incremental .",
    "dev": "node ./scripts/watch.js",
    "nuke": "rm -drf public/* && npm run postinstall && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pretty": "prettier --write \"{src,fetch,legacy-commonjs}/**/*.{js, json}\""
  },
  "keywords": [
    "personal",
    "blog"
  ],
  "author": "jbolda",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/jbolda/jacobbolda.com/issues"
  },
  "homepage": "https://www.jacobbolda.com",
  "engines": {
    "node": ">=14.13.*"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@toastdotdev/mdx": "^0.2.4",
    "airtable": "0.11.1",
    "big.js": "6.1.1",
    "esinstall": "^1.1.7",
    "gray-matter": "^4.0.3",
    "nightwind": "^1.1.11",
    "node-fetch": "3.1.0",
    "postcss": "^8.3.6",
    "postcss-cli": "8.3.1",
    "prism-react-renderer": "^1.2.1",
    "prismjs": "1.25.0",
    "remark-mdx": "^2.0.0-next.9",
    "remark-parse": "^10.0.0",
    "remark-stringify": "^10.0.1",
    "remark-wiki-link": "^1.0.4",
    "tailwindcss": "^2.2.9",
    "toast": "0.3.47",
    "unified": "^10.1.0"
  },
  "devDependencies": {
    "@effection/process": "^2.0.0-beta.15",
    "chokidar": "^3.5.2",
    "effection": "^2.0.0-beta.16",
    "patch-package": "^6.4.7",
    "prettier": "2.4.1"
  },
  "volta": {
    "node": "16.7.0",
    "npm": "7.20.6"
  }
}
