  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/jbolda/jbolda.github.io/issues"
  },
  "homepage": "https://www.jacobbolda.com",
  "engines": {
    "node": ">=8.*"
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@mdx-js/mdx": "^2.0.0-next.8",
    "@mdx-js/preact": "^2.0.0-next.8",
    "@sector/breadbox": "^0.0.4",
    "@sindresorhus/slugify": "^1.0.0",
    "big.js": "5.2.2",
    "chalk": "^4.1.0",
    "d3": "4.13.0",
